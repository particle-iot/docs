<div class='header'>

  <div class='left' data-swiftype-index='false'>


    <div class="toggle-nav">
      <a href="#" class="subnav-link toggle-navigation">
        <i class="ion-navicon" title="show/hide the navigation"></i>
      </a>
    </div>

    <a href="/">
      <img src="/assets/images/particle-docs.png" id="logo">
    </a>

    <div class="sections">
      <a class="nav {{#is path.href '/'}}active{{/is}}" href="/">Home</a>
      <a class="nav {{#contains path.href 'quickstart'}}active{{/contains}}" href="/quickstart">Quickstart</a>
      <a class="nav {{#contains path.href 'tutorials'}}active{{/contains}}" href="/tutorials">Tutorials</a>
      <a class="nav {{#contains path.href 'reference'}}active{{/contains}}" href="/reference">Reference</a>
      <a class="nav {{#contains path.href 'datasheets'}}active{{/contains}}" href="/datasheets">Datasheets</a>
      <a class="nav {{#contains path.href 'community'}}active{{/contains}}" href="/community">Community</a>
      <a class="nav {{#contains path.href 'tools'}}active{{/contains}}" href="/tools">Tools</a>
      <a class="nav {{#contains path.href 'support'}}active{{/contains}}" href="https://support.particle.io/hc/">Support</a>
    </div>

    <div class="dropdown mobile-only">
      <a id="dLabel" data-target="#" class="nav" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        {{top-level-category path.href}}
        <i class="icon ion-chevron-down"></i>
      </a>
      <ul class="dropdown-menu" aria-labelledby="dLabel">
        <li><a href="/">Home</a></li>
        <li><a href="/quickstart">Quickstart</a></li>
        <li><a href="/tutorials">Tutorials</a></li>
        <li><a href="/reference">Reference</a></li>
        <li><a href="/datasheets">Datasheets</a></li>
        <li><a href="/community">Community</a></li>
        <li><a href="/tools">Tools</a></li>
        <li><a href="https://support.particle.io/hc/">Support</a></li>
      </ul>
    </div>

  </div>

  <div class='right'>
    <div class="search">
      <div class="search-input-wrapper">
        <input class="st-default-search-input" type="text" placeholder='Search' value=''/>
      </div>
      <div class="search-results">
      </div>
    </div>

    <div class="dropdown narrow">
      <a id="userMenu" data-target="#" class="nav" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="icon ion-person"></i><span id="userMenuLabel">User</span></a>
      <ul class="dropdown-menu pull-right" aria-labelledby="userMenu">
        <li id="userMenuLoggedInAs" class="loginMenuItem"></li>
        <li id="userMenuConsole"><a href="https://console.particle.io" target="_blank">Console</a></li>
        <li id="userMenuEditAccount"><a>Edit Account</a></li>
        <li id="userMenuLogout"><a>Logout</a></li>
      </ul>
    </div>

    {{!-- Currently disabled always due to lack of use
    {{#unless noEditButton}}
    <a href='{{edit-link branch path.href path.name}}' class="nav" target="_blank"><i class="ion-edit"></i>Edit</a>
    {{/unless}}
    --}}

  </div>
</div>
