<!-- Required includeDefinitions: [api-helper, api-helper-extras, api-helper-tools, xlsx] -->
<div class="apiHelper apiHelperImportDevices apiHelperTable apiHelperLoggedIn">
    <div class="apiHelperBox">
        <div style="margin: 12px 2px 12px 6px; border-top: 1px;">Import settings</div>
        {{> create-or-select-product}}
        {{> device-group }}
        <div class="apiHelperTableFlexContainer" style="margin: 2px 2px 2px 6px;">
            <div style="width: 135px;">Claim device</div>
            <div style="width: 550px;">
                <div><label><input type="checkbox" class="claimLoggedInCheckbox" />Claim to the logged in account <span></span></label></div>
                <div><label><input type="checkbox" class="claimTokenCheckbox"/>Claim to an account using access token</label>
                    <input type="text" size="20" class="claimTokenInput" /></div>
            </div>
        </div>
        <div class="apiHelperTableFlexContainer" style="margin: 2px 2px 2px 6px;">
            <div style="width: 135px;">Name devices</div>
            <div style="width: 550px;">
                <div><label><input type="radio" value="manual" checked/>Set manually (or unnamed)</label></div>
                <div><label><input type="radio" class="sequential"/>Sequentially with prefix </label> &nbsp;
                    <input type="text" size="10" class="namePrefix" /></div>
                <div><label><input type="radio" value="serial" />Use serial number for name</label></div>
                <div><label><input type="radio" value="random" />Random words</label></div>
            </div>
        </div>
        <div class="apiHelperTableFlexContainer" style="margin: 2px 2px 2px 6px;">
            <div style="width: 135px;">Mark development</div>
            <div style="width: 550px;">
                <div><label><input type="checkbox" class="markDevelopmentCheckbox" />Mark as development device</label></div>
            </div>
        </div>
        <div style="margin: 12px 2px 12px 6px;">Add devices:</div>
        <div class="apiHelperTableFlexContainer" style="margin: 2px 2px 2px 6px;">
            <div style="width: 135px;">Add from file</div>
            <div style="width: 550px;" class="fileDropZone">
                <button class="selectFileButton">Select File</button> or drag-and-drop file here
            </div>
        </div>
        <div class="apiHelperTableFlexContainer" style="margin: 2px 2px 2px 6px;">
            <div style="width: 135px;">Manual entry</div>
            <div style="width: 550px;">
                <input type="text" size="60" class="manualEntryInput" /> &nbsp;
                <button class="addButton">Add</button>
            </div>
        </div>
        <div class="apiHelperStatus"></div>
        <div class="progressDiv" style="display:none">
            <progress value="0" max="100"></progress>
        </div>
        <div class="statusMessage"></div>
        {{> table-display }}
    </div>
</div>

